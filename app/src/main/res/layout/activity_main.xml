<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/button_name"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:text="Wywołaj aktywność z imieniem i nazwiskiem"
            android:textSize="8pt"/>

        <Button
            android:id="@+id/button_url"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:text="Wywołaj aplikajcę obsługującą podany adres url"
            android:textSize="8pt"/>

        <Button
            android:id="@+id/button_geo"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:text="Wyświetl aktywność z danym położeniem (GEO)"
            android:textSize="8pt"/>

        <EditText
            android:id="@+id/text_url"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:text="https://" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>